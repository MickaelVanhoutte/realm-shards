{
    "root": true,
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "extraFileExtensions": [
            ".svelte"
        ]
    },
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "plugins": [
        "@typescript-eslint",
        "svelte"
    ],
    "overrides": [
        {
            "files": [
                "*.svelte"
            ],
            "parser": "svelte-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser"
            }
        }
    ],
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "no-console": "off",
        "prefer-const": "warn",
        "no-var": "error"
    },
    "ignorePatterns": [
        "node_modules",
        "dist",
        "build",
        "*.config.js"
    ]
}